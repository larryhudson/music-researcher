---
import Layout from "@src/components/Layout.astro";

const authUrl = new URL(`https://accounts.spotify.com/authorize`)
authUrl.searchParams.set('response_type', 'code');
authUrl.searchParams.set('client_id', import.meta.env.SPOTIFY_CLIENT_ID);
authUrl.searchParams.set('scope', 'playlist-modify-private user-top-read user-read-recently-played');
authUrl.searchParams.set('redirect_uri', 'http://localhost:3000/auth/spotify/callback');
---

<Layout>
	<a href={authUrl}>Login with Spotify</a>
	<p>URL: {authUrl}</p>
</Layout>
